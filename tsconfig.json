{
  "extends": "./.svelte-kit/tsconfig.json",     // 共通設定を継承
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                         // SvelteKitのためにESモジュールを使用
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "types": ["svelte"],                        // SvelteKitの型を優先
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}